{
  "compilerOptions": {
    "target": "es6",                   // minúsculo, padrão recomendado
    "lib": ["dom", "dom.iterable", "esnext"],  // minúsculo, padronizado
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",               // minúsculo, padrão recomendado
    "moduleResolution": "node",      // 'node' é mais comum e recomendado que 'bundler'
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",                  // mantém para resolver alias
    "paths": {
      "@/*": ["./*"]
    },
    "typeRoots": ["./types", "./node_modules/@types"],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
